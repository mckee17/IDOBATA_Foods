<table class="table table-sm table-borderless table-hover text-center mt-5">
  <thead class="thead-dark">
    <tr>
      <th class="col-6">ジャンル一覧</th>
      <th class="col-2"></th>
      <th class="col-2"></th>
      <th class="col-2"></th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |g| %>
    <tr>
      <td><%= g.name %></td>
      <td></td>
      <td><%= link_to '編集', edit_admin_genre_path(g), class: "btn btn-sm btn-success" %></td>
      <td><%= link_to '削除', admin_genre_path(g), method: :delete, remote: true, class: "btn btn-sm btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>