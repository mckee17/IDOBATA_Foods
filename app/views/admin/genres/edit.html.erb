<div class="container">
  <div class="row">
    <div class="h2 col-12 mt-3 text-center">ジャンル編集</div>
    <div class="form col-8 offset-2">
      <%= form_with model: @genre, url: admin_genre_path(@genre) do |f| %>
        <%= f.text_field :name, class: "form-control my-3" %>
        <%= f.submit "編集", class: "btn btn-success col-12 my-3" %>
      <% end %>
    </div>
  </div>
</div>