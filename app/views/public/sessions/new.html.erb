<div class="container">
  <div class="row">
    <div class="h2 col-12 my-3 text-center">ログイン</div>
    <div class="form col-4 offset-md-4 mt-4">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field my-3">
    <%= f.label "ユーザー名", class: "form-label" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
  </div>

  <div class="field my-3">
    <%= f.label "パスワード", class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field ml-4 my-3">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label "次回から自動的にログイン", class: "form-check-label" %>
    </div>
  <% end %>

  <div class="actions my-3">
    <%= f.submit "ログイン", class: "btn btn-success col-12" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
