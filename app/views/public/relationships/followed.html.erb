<div class="container">
  <div class="row">
    <div class="col-3 mt-5">
      <%= render partial: '/public/homes/side_bar' %>
    </div>

    <div class="col-9">
    <div class="h2 col-12 mt-3">フォロー一覧</div>
    <div class="table table-borderless table-hover text-center mt-5 offset-md-1">
      <table>
        <thead class="thead-dark">
          <tr>
            <th class="col-5">名前</th>
            <th class="col-3">投稿数</th>
            <th class="col-4"></th>
          </tr>
        </thead>
        <tbody>
          <% @followed.each do |f| %>
          <tr>
            <td><%= f.name %></td>
            <td>( <%= f.foods.count %> )</td>
            <td><%= link_to ">>", foods_path(id: :followed, user: f.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>