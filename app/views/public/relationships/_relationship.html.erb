<% if Relationship.find_by(followed_id: food.user.id, follow_id: current_user.id).present? %>
  <%= link_to "フォローを外す", relationship_path(id: food.id), method: :delete, remote: true, class: "btn btn-sm btn-secondary" %>
<% elsif !( food.user_id == current_user.id) %>
  <%= link_to "フォローをする", relationships_path(id: food.id), method: :post, remote: true, class: "btn btn-sm btn-success" %>
<% end %>