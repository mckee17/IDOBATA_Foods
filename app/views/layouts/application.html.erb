<!DOCTYPE html>
<html>
  <head>
    <title>IDOBATA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to "HOME", root_path %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarToggler">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item active">
              <%= link_to "新規投稿", new_food_path %>
            </li>
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "投稿履歴", foods_path(id: :current) %>
            </li>
            <li class="nav-item">
              <%= link_to "お気に入り", foods_path(id: :favorite) %>
            </li>
            <li class="nav-item">
              <%= link_to "フォロー一覧", followed_relationships_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to "ログイン", new_user_session_path %>
            </li>
            <% end %>
          </ul>
          <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseSearch" aria-expanded="false" aria-controls="collapseSearch">
            search
          </button>
        </div>
      </nav>
        <div class="collapse" id="collapseSearch">
          <div class="container">
            <div class="row">
              <div class="form col-12 my-5">
                <%= form_with url: '/searchs', method: :get, local: true do |f| %>
                  <%= f.text_field :word, class: "form-control col-6 offset-md-1", style:"display: inline-block;", placeholder:"検索ワード" %>
                  <%= f.select :id, { '名前': 'name', '成分名': 'compound', '機能': 'function' }, { include_blank: '選択してください' }, { class: 'form-control col-3', style:"display: inline-block;", required: true } %>
                  <%= f.submit "検索", class: "form-control col-1", style:"display: inline-block;" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
    </header>
    <%= yield %>
  </body>
</html>
